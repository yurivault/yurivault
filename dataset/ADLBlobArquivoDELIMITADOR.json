{
	"name": "ADLBlobArquivoDELIMITADOR",
	"properties": {
		"linkedServiceName": {
			"referenceName": "AzureDataLakeStorage1",
			"type": "LinkedServiceReference"
		},
		"parameters": {
			"FileName": {
				"type": "string"
			},
			"Directory": {
				"type": "string",
				"defaultValue": "RAW/RECEBIDOS"
			},
			"Container": {
				"type": "string",
				"defaultValue": "storagemaster"
			},
			"Delimitador": {
				"type": "string",
				"defaultValue": ";"
			},
			"Encoding": {
				"type": "string",
				"defaultValue": "UTF-8"
			},
			"Compressao": {
				"type": "string",
				"defaultValue": "none"
			},
			"QuoteCharacter": {
				"type": "string",
				"defaultValue": " "
			}
		},
		"folder": {
			"name": "ExecucaoMestre"
		},
		"annotations": [],
		"type": "DelimitedText",
		"typeProperties": {
			"location": {
				"type": "AzureBlobStorageLocation",
				"fileName": {
					"value": "@dataset().FileName",
					"type": "Expression"
				},
				"folderPath": {
					"value": "@dataset().Directory",
					"type": "Expression"
				},
				"container": {
					"value": "@dataset().Container",
					"type": "Expression"
				}
			},
			"columnDelimiter": {
				"value": "@dataset().Delimitador",
				"type": "Expression"
			},
			"compressionCodec": {
				"value": "@dataset().Compressao",
				"type": "Expression"
			},
			"encodingName": {
				"value": "@if(\n   empty(dataset().Encoding),'UTF-8',dataset().Encoding)",
				"type": "Expression"
			},
			"escapeChar": {
				"value": "@if(equals(trim(dataset().QuoteCharacter),''),'','\\')",
				"type": "Expression"
			},
			"firstRowAsHeader": false,
			"quoteChar": {
				"value": "@trim(dataset().QuoteCharacter)",
				"type": "Expression"
			}
		},
		"schema": [
			{
				"type": "String"
			}
		]
	},
	"type": "Microsoft.DataFactory/factories/datasets"
}